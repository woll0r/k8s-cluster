---
exclude_paths:
  - mkdocs.yaml
  - hack/
  - cluster/

skip_list:
  - yaml[line-length]
  - yaml[comments] # This one should get caught earlier by actual yamllint
  - yaml[indentation] # Once again... actual yamllint
  - var-naming
warn_list:
  - command-instead-of-shell
  - deprecated-command-syntax
  - experimental
  - no-changed-when
